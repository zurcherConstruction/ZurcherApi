{
  "expo": {
    "entryPoint": "./index.js",
    "name": "Zurcher Construction",
    "slug": "WorkTrackerMovil",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "icon": "./assets/logo.png",
      "color": "#1e3a8a",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} nuevas notificaciones",
      "iosDisplayInForeground": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zurcher.construction",
      "buildNumber": "27",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Use Face ID to securely log in to your Zurcher Construction account without typing your password.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can select and upload images related to your construction projects, such as receipts, progress photos, or site documentation.",
        "NSCameraUsageDescription": "We need access to your camera so you can take and upload photos of receipts, work progress, or construction sites directly to your project records.",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "UNUserNotificationCenter": {
          "UNAuthorizationOptionAlert": true,
          "UNAuthorizationOptionBadge": true,
          "UNAuthorizationOptionSound": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zurcher.construction",
      "permissions": [
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "12f004e9-48c9-4c45-b2b8-d68a1228bcdf"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/12f004e9-48c9-4c45-b2b8-d68a1228bcdf"
    }
  }
}