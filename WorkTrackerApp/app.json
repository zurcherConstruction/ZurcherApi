{
  "expo": {
    "name": "Zurcher Construction",
    "slug": "WorkTrackerMovil",

    "version": "1.0.7",

    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "icon": "./assets/logo.png",
      "color": "#1e3a8a",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} nuevas notificaciones",
      "iosDisplayInForeground": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zurcher.construction",

      "buildNumber": "38",


      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Use Face ID to authenticate yourself and access your account",
        "NSCameraUsageDescription": "La aplicación necesita acceso a la cámara para tomar fotos de trabajos y formularios de mantenimiento.",
        "NSPhotoLibraryUsageDescription": "La aplicación necesita acceso a la galería para subir fotos de trabajos y formularios de mantenimiento.",
        "NSPhotoLibraryAddUsageDescription": "La aplicación necesita permiso para guardar fotos en tu galería.",

        "UIBackgroundModes": [
          "remote-notification"
        ],
        "UNUserNotificationCenter": {
          "UNAuthorizationOptionAlert": true,
          "UNAuthorizationOptionBadge": true,
          "UNAuthorizationOptionSound": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zurcher.construction",
      "permissions": [
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "12f004e9-48c9-4c45-b2b8-d68a1228bcdf"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/12f004e9-48c9-4c45-b2b8-d68a1228bcdf"
    }
  }
}